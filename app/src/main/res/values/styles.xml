<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CircleFlowIndicator">
        <attr name="activeColor" format="color" />
        <attr name="activeBackColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="radius2" format="dimension" />
        <attr name="radiusActive" format="dimension" />
        <attr name="radiusInactive" format="dimension" />
        <attr name="spacing" format="dimension" />
        <attr name="centered2" format="boolean" />
        <attr name="fadeOut" format="integer" />
        <attr name="inactiveType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="activeType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="snap2" format="boolean" />
    </declare-styleable>

</resources>
